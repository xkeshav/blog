---
import BaseHead from "@/layouts/BaseHead";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site-config";
import type { SiteMeta } from "@/types";

interface Props {
  meta: SiteMeta;
}

const {
  meta: { title, description = siteConfig.description, ogImage, articleDate },
} = Astro.props;
---

<html lang={siteConfig.lang}>
  <head>
    <BaseHead title={title} description={description} ogImage={ogImage} articleDate={articleDate} />
  </head>
  <body>
    <ThemeProvider />
    <SkipLink />
    <Header />
    <main id="main" class="scroller">
      <slot />
    </main>
    <Footer />
  </body>
</html>
