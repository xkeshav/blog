---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<style>
  li {
    height: max-content;
    border-inline: 1px dashed green;
    align-items: stretch;
    padding: 1rem;
    font-size: large;
    outline: 0.25rem solid grey;
    outline-offset: 0.5rem;
    margin-block: 2rem;
  }
</style>
<PageLayout meta={{ title: "Home" }}>
  <section>
    <h1 class="title mb-6">Hello!</h1>
    <p class="mb-4">Welcome to arriving at my corner of the internet.</p>
    <SocialList />
  </section>
  <section aria-label="Blog post list" class="mt-16">
    <h2 class="mb-4 text-xl text-sky-400/100 underline underline-offset-2">Posts</h2>
    <ul class="space-y-4 sm:space-y-2">
      {
        allPostsByDate.map((p) => (
          <li class="flex flex-col gap-x-2 sm:flex-row">
            <PostPreview post={p} />
          </li>
        ))
      }
    </ul>
  </section>
</PageLayout>
